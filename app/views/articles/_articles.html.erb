<ul class="media-list">
  <% articles.each do |article| %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(article.user, { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to article.user.name, user_path(article.user) %> <span class="text-muted">posted at <%= article.created_at %></span>
        </div>
        <div>
          <%= link_to article.title, article_path(article) %>
          <%= link_to article_path(article) do %>
            <%= image_tag(article.video_url(:screenshot).to_s, id: "video", :alt => "screenshot") %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate articles %>
</ul>
