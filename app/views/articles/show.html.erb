<div class="row">
  <aside class="col-md-8">
    <div>
      <%= link_to @article.video_url.to_s do %>
        <%= image_tag(@article.video_url(:screenshot).to_s, id: "video", :alt => "screenshot") %>
      <% end %>
    </div>
    <h3><%= @article.title %></h3>
    <div class="article-desc">
      <%= @article.description %>
    </div>
    <div>
      <img src="<%= gravatar_url(@article.user, size: 30) %>" alt="" class="img-circle">
      <%= link_to @article.user.name, user_path(@article.user) %>
    </div>
    <div class="delete-btn">
      <% if current_user == @article.user %>
        <%= link_to "動画を削除する", @article, method: :delete, data: { confirm: "本当によろしいですか？" }, class: 'btn btn-danger btn-xs' %>
      <% end %>
    </div>
  </aside>
  <div class="col-md-4">
    <h4>関連動画</h4>
    <%= render 'articles/articles', articles: @articles %>
  </div>
</div>
