<div class="row">
  <aside class="col-xs-8">
    <%= link_to @article.video_url.to_s do %>
      <%= image_tag(@article.video_url(:screenshot).to_s, id: "video", :alt => "screenshot") %>
    <% end %>
    <%= @article.title %>
    <%= @article.description %>
    <div>
      <% if current_user == @article.user %>
        <%= link_to "Delete", @article, method: :delete, data: { confirm: "本当によろしいですか？" }, class: 'btn btn-danger btn-xs' %>
      <% end %>
    </div>
  </aside>
  <div class="col-xs-4">
    <%= render 'articles/articles', articles: @articles %>
  </div>
</div>
