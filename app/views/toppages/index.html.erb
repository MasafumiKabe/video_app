<% if user_signed_in? %>
  <div class="row">
    <div class="col-md-offset-2 col-md-8">
      <div class="media">
        <div class="media-body">
          <h3>動画一覧</h3>
        </div>
        <div class="media-right">
          <div class="post-btn">
            <%= link_to "新規投稿", new_article_path, class: 'btn btn-primary btn-md' %>
          </div>
        </div>
      </div>
      <%= render 'articles/articles', articles: @articles %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Video App</h1>
      <%= link_to "Log in", new_user_session_path, class: "btn btn-lg btn-primary" %>
    </div>
  </div>
<% end %>
