<% if user_signed_in? %>
  <div class="row">
    <div class="col-xs-8">
      <h5>ログインしています (<%= current_user.name %> : <%= current_user.email %>)</h5>
      <%= link_to "新規投稿", new_article_path, class: 'btn btn-primary btn-block' %>
      <%= render 'articles/articles', articles: @articles %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Video App</h1>
      <%= link_to "Log in", new_user_session_path, class: "btn btn-lg btn-primary" %>
    </div>
  </div>
<% end %>
